        "services.SongsWithPagination": {
            "type": "object",
            "properties": {
                "current_page": {
                    "type": "integer"
                },
                "pages_amount": {
                    "type": "integer"
                },
                "result": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/models.Song"
                    }
                }
            }
        }
    }
